<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/beige_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/library_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Library Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/brown_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/library_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Library Address"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/library_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/join_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Library"
            android:textColor="@color/white"
            android:background="@color/brown_primary"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 