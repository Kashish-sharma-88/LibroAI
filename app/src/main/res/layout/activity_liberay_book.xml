<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ðŸ·ï¸ Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“š Add Book"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="32dp" />

        <!-- ðŸ“¦ Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Book Title -->
                <EditText
                    android:id="@+id/bookTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="   Book Title"
                    android:drawableStart="@drawable/books"
                    android:drawablePadding="12dp"
                    android:padding="16dp"
                    android:backgroundTint="#F0F0F0"
                    android:textColor="#3E2723"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp" />

                <!-- Author -->
                <EditText
                    android:id="@+id/bookAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="   Author Name"
                    android:drawableStart="@drawable/user_writer"
                    android:drawablePadding="12dp"
                    android:padding="16dp"
                    android:backgroundTint="#F0F0F0"
                    android:textColor="#3E2723"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp" />

                <!-- Description -->
                <EditText
                    android:id="@+id/bookDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="   Short Description"
                    android:drawableStart="@drawable/description_alt"
                    android:drawablePadding="12dp"
                    android:padding="16dp"
                    android:backgroundTint="#F0F0F0"
                    android:textColor="#3E2723"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp"
                    android:minLines="3"
                    android:gravity="top"
                    android:layout_marginBottom="20dp" />

                <!-- Image URL -->
                <EditText
                    android:id="@+id/bookImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="   Image URL"
                    android:drawableStart="@drawable/picture"
                    android:drawablePadding="12dp"
                    android:padding="16dp"
                    android:backgroundTint="#F0F0F0"
                    android:textColor="#3E2723"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp"
                    android:layout_marginBottom="30dp" />

                <!-- Add Book Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/loginBtn"
                    android:layout_width="250dp"
                    android:layout_height="55dp"
                    android:text="Add Book"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/brown_button_bg"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
