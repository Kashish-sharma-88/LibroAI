<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Icon (Lock) -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/img_5"
            android:tint="#5C3D2E"
            android:layout_marginTop="80dp"
            android:contentDescription="Lock Icon" />

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#5C3D2E"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password?"
            android:textSize="28sp"
            android:textColor="#5C3D2E" />

        <!-- Subtext -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No worries, weâ€™ll send you\nreset instructions"
            android:textAlignment="center"
            android:textColor="#7E6452"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Bottom Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bottom_curvedf"
            android:backgroundTint="#5C3D2E"
            android:backgroundTintMode="src_in"
            android:elevation="4dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Email"
                android:textColor="#F5E9DA"
                android:textSize="14sp" />

            <!-- Email Input -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_rounded"
                android:hint="Enter your Email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:textColor="#5C3D2E"
                android:textColorHint="#5C3D2E" />

            <!-- Reset Password Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_light"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:text="Reset Password"
                android:textAllCaps="false"
                android:textColor="#5C3D2E" />

            <!-- Back to Login -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Back to Login"
                android:textColor="#F5E9DA"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
