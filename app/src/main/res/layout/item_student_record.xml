<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Student Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/student"
                android:background="@drawable/circle_bg"
                android:padding="8dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/studentNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4B2C20" />

                <TextView
                    android:id="@+id/studentEmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="john.doe@example.com"
                    android:textSize="12sp"
                    android:textColor="#8B5B29"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISSUED"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_green"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <!-- Book Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/book"
                android:background="@drawable/image_rounded"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/bookTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Great Gatsby"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#4B2C20" />

                <TextView
                    android:id="@+id/bookAuthorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F. Scott Fitzgerald"
                    android:textSize="12sp"
                    android:textColor="#8B5B29"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/bookCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fiction"
                    android:textSize="11sp"
                    android:textColor="#8B5B29"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Date Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_desc"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Issue Date"
                        android:textSize="11sp"
                        android:textColor="#8B5B29"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/issueDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Dec 2024"
                        android:textSize="13sp"
                        android:textColor="#4B2C20"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Return Date"
                        android:textSize="11sp"
                        android:textColor="#8B5B29"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/returnDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Jan 2025"
                        android:textSize="13sp"
                        android:textColor="#4B2C20"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Days Remaining"
                        android:textSize="11sp"
                        android:textColor="#8B5B29"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/daysRemainingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 days"
                        android:textSize="13sp"
                        android:textColor="#4B2C20"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fine Amount"
                        android:textSize="11sp"
                        android:textColor="#8B5B29"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fineAmountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹0"
                        android:textSize="13sp"
                        android:textColor="#4B2C20"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Action Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/viewDetailsButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="View Details"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/btn_brown" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 