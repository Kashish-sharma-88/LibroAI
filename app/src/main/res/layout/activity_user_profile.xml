<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF5EC"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile"
            android:background="@drawable/circle_bg"
            android:padding="20dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:text="Kashish Sharma"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#5C3D2E"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_email"
            android:text="kashish@email.com"
            android:textSize="16sp"
            android:textColor="#9C8577"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_role"
            android:text="👩‍🎓 Student"
            android:textSize="14sp"
            android:textColor="#8A6F4D"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_bio"
            android:text="📖 Passionate reader, love coding and books!"
            android:textSize="14sp"
            android:textColor="#4A3C31"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_library"
            android:text="🏛️ Central Library"
            android:textSize="14sp"
            android:textColor="#6E5849" />

    </LinearLayout>
</ScrollView>
