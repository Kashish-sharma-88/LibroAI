<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to LibroAI ðŸ“š"
        android:textSize="30sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/heroImage"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:src="@drawable/libro_ai_hero"
        android:scaleType="fitCenter"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_image_bg"
        android:elevation="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your AI-powered smart library assistant to learn, borrow and connect!"
        android:textColor="#333333"
        android:textSize="18sp"
        android:gravity="center"
         android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:id="@+id/btnStudent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/square_button_bg"
        android:padding="16dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/student"
            android:id="@+id/img2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join as Student"
            android:layout_toEndOf="@+id/img2"
            android:layout_marginStart="50dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/next"
            android:layout_alignParentEnd="true"
            app:tint="#FFFFFF" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnLibrarian"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/square_button_bg"
        android:padding="14dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/avatar"
            android:id="@+id/img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join as Librarian"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_toEndOf="@+id/img"
            android:layout_marginStart="50dp"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/next"
            android:layout_alignParentEnd="true"
            app:tint="#FFFFFF" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empowering Smart Learning ðŸ“–"
        android:textSize="17sp"
        android:textColor="#888888"
        android:layout_marginTop="20dp"/>

</LinearLayout>
</ScrollView>