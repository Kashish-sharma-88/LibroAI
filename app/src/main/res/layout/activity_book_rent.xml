<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/beige_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:layout_marginStart="110dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3e2723" />

        <TextView
            android:id="@+id/book_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Description"
            android:layout_marginStart="100dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#3e2723" />
        <ImageView
            android:id="@+id/book_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_2"
            android:scaleType="centerCrop"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3e2723" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Author"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#5c3d2e" />

        <TextView
            android:id="@+id/book_rent_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent: ₹70"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#4caf50"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/return_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return by: 2025-07-12"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="#f44336"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/delivery_options_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_pickup_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_delivery_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Delivery (₹20)" />
        </RadioGroup>

        <EditText
            android:id="@+id/address_input_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter delivery address"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:backgroundTint="#5c3d2e"
            android:padding="12dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Rent"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/brown_button_bg"/>
    </LinearLayout>
</ScrollView>
