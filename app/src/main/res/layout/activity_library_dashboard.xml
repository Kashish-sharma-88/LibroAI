<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5E9DA">

        <!-- âœ… Toolbar added here -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#5C3D2E"
            android:elevation="4dp"
            app:title="LibroAI"
            app:titleTextColor="#FFFFFF" />

        <!-- Custom Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFF"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LibroAI"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#4B2C20"
                android:paddingStart="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Librarian Name"
                    android:textSize="12sp"
                    android:textColor="#4B2C20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Library Name"
                    android:textSize="12sp"
                    android:textColor="#4B2C20" />
            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_3"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Scrollable Content with weight 1 to avoid overlap -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome Librarian..!!"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#4B2C20"
                    android:layout_marginTop="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:weightSum="3">

                    <!-- Total Books -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#5C3D2E"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/books" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Books"
                            android:textStyle="bold"
                            android:textColor="#F5E9DA"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1200"
                            android:textColor="#F5E9DA"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Issued Books -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#5C3D2E"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/book_open_cover" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Issued Books"
                            android:textStyle="bold"
                            android:textColor="#F5E9DA"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="300"
                            android:textColor="#F5E9DA"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Users -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#5C3D2E"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_7" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Users"
                            android:textStyle="bold"
                            android:textColor="#F5E9DA"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="450"
                            android:textColor="#F5E9DA"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Functional Cards -->
                <include layout="@layout/card_add_books" />
                <include layout="@layout/item_card_manage_books" />
                <include layout="@layout/item_card_accept_requests" />
                <include layout="@layout/item_card_manage_issued" />
                <include layout="@layout/item_card_records" />
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navbar" />
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFF6E9"
        app:itemTextColor="#4B2C20"
        app:itemIconTint="#D38D73"
        app:itemRippleColor="#FFE9CC"
        app:menu="@menu/nav_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
